.Card{
  position: relative;
  margin: 15rpx 30rpx;
  box-shadow: 0px 3px 20px rgba(0, 0, 0, 0.12);
  border: 1px solid #d0d0d0;
  border-radius: 20rpx;
  background-color: white;
  overflow: hidden;
}
.coverImg{
  width: 100%;
  height: 359rpx;
  position: relative;
}

.title{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 48rpx;
  padding: 0 0 20rpx 20rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: white;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.65) 100%);
}

.leftImage{
  width: 100%;
  height: 100%;
  background-color: skyblue;
  vertical-align: middle;
}

.right{
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: 20rpx 10rpx 0;
  position: relative;
}

.detail{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.label{
  background: #fff0ed;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 20rpx;
  font-weight: 400;
}
.process{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.process_splint{
  display: flex;
  align-items: center;
}
.process-data{
  font-size: 20rpx;
  font-weight: 400;
  margin-right: 20rpx;
}

.top-card-weeksign-progress {
  width: 100px;
  display: flex;
  border: 1rpx solid rgb(204, 198, 198);
  border-radius: 100rpx;
  height: 15rpx;
  background-color: #fff;
}

.top-card-weeksign-progress-item {
  border-radius: 100rpx;
  position: absolute;
  height: 15rpx;
}
.text_state {
  color: #bdb1b1;
  font-size: 20rpx;
}

.mineCourseBtns {
  height: 72rpx;
  display: flex;
  /* border-radius: 180rpx; */
  overflow: hidden;
  box-sizing: border-box;
}

.mineCourseBtns button {
  /* border-radius: 0; */
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.preview-btn {
  border: 1rpx solid rgb(204, 198, 198);
  /* border: 1rpx solid rgb(204, 198, 198); */
  border-left:1rpx solid rgb(204, 198, 198);
  background: #0088fb;
  color: #fff;
  flex: 1;
}

.edit-btn {
  background: #cf9655;
  color: #fff;
  flex: 1;
}