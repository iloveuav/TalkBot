.Card{
  height: 320rpx;
  display: flex;
  width: 96%;
  margin: 10rpx 2%;
  box-shadow: 0 0 8rpx #ccc;
  border: 1px solid #d0d0d0;
  border-radius: 20rpx;
  background-color: white;
}
