/* components/index/indexCourseCard/courseCard.wxss */

.course{
  height: 100%;
  margin-left: 50rpx;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
}

.course-item {
  display: inline-block;
  /* padding-left: 20rpx; *//* margin-right: 30rpx; */
  margin-left: 30rpx;
  width: 100%;
}



.classInfoBox {
  display: flex;

  /* flex-wrap: nowrap; *//* justify-content: flex-start; */
}

.course-icon {
  height: 100rpx;
  width: 100rpx;
  border-radius: 20%;
  background-color: rgb(91, 176, 204);
  border: 1rpx solid rgb(218, 218, 218);
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}



.course-info {
  flex: 3;
  margin-left: 25rpx;
  min-width: 100rpx;
}

.course-info-title {
  font-size: 38rpx;
}

.swiper {
  position: absolute;
  min-width: 220rpx;
  margin-left: 60%;
  right: 10rpx;
  width: 220rpx;
  height: 190rpx;
  bottom: 40%;
}

.slide-image {
  width: 95%;
  height: 100%;
  border-radius: 30rpx;
}

.zoom-out {
  transform: scale(0.8);
  transition: all 0.7s ease-out 0s;
}

.zoom-in {
  transform: scale(1);
  transition: all 0.7s ease-in 0s;
}

.course-cover-container {
  position: relative;
  display: flex;
  left: 250rpx;
}

.course-cover {
  height: 200rpx;
  width: 150rpx;
  border-radius: 15rpx;
}

.course-cover-next {
  height: 160rpx;
  width: 120rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
  border-radius: 15rpx;
  margin-right: -140rpx;
}

.course-progress {
  margin-left: 80rpx;
  margin-right: 80rpx;
  margin-top: 50rpx;
  height: 60rpx;
  padding: 10rpx;
  border: 1rpx solid rgb(222, 222, 222);
  border-radius: 15rpx;
  /* background-color: rgb(242, 242, 240); */
  background: rgb(221, 232, 235);
  color:rgb(21, 139, 179);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.course-id {
  height: 50rpx;
  width: 50rpx;
  border-radius: 25rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  /* background-color: rgb(244, 244, 238); */
  background: rgb(236, 239, 240);
  border: 1rpx solid rgb(222, 222, 222);
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroller {
  /* height: 274rpx; */
  width: 100%;
}
