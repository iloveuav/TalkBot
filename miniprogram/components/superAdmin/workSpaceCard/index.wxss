.view_tupian_wenzi {
  border-radius: 10rpx;
  background-color: #ffffff;
  margin: 30rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 99999;
  /* height: 15vh; */
}

.key_state{
  /* margin-left: 80rpx; */
  /* border: 1px solid red; */
  position: absolute;
  right: 0rpx;
}

.wenzi_title{
  position: relative;
  font-size: 21rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.wenzi_desc{
  color: #5B5B5B;
  font-size: 20rpx;
  overflow: auto;
  max-height: 60rpx;
  /* border:1px solid rgb(245, 245, 245);
  border-radius: 10rpx; */
    display: -webkit-box;
    display: box;
    line-clamp: 2;
    box-orient: vertical;
    word-break: break-all;
}

.view_content{
  display: flex;
}

/* 图片 */

.image_1 {
  margin-right: 20rpx;
  width: 160rpx;
  height: 160rpx;
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.06);
  background-color: skyblue;
}

.view_wenzi2 {
  height: 180rpx;
  padding: 6rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.text_state {
  color: #ff1010;
  font-size: 18rpx;
  /* border: 1px solid red; */
}

.btn{
  height: 40rpx;
  padding: 3rpx 12rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  background-color: #db4f72;
  color: white;
}
.btn:first-child{
  margin-right: 20rpx;
  background-color: #b5d6e9;
  color: white;
}

.btn:nth-child(2) {
  margin-right: 20rpx;
  background-color: #6ad366;
  color: white;
}
