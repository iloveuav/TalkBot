/* components/course/courseSelect/courseSelect.wxss */

.com-selectBox {
  width: 100%;
  height: 100rpx;
  border-radius: 150rpx;
}

.com-sContent {
  border: 1px solid #e2e2e2;
  background: '';
  font-size: 16px;
  position: relative;
  height: 45px;
  line-height: 30px;
  border-radius: 150rpx;

  display: flex;
}

.courseId{
  /* flex: 1; */

  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 35rpx;
  color: rgb(30, 145, 228);
  /* border: 5rpx solid grey; */
  background-color: rgb(147, 196, 230);

  display: flex;
  justify-content: center;
  align-items: center;

}

.com-sImg {
  position: absolute;
  right: 10px;
  top: 5px;
  width: 30px;
  height: 30px;
  transition: all 0.3s ease;
}
.com-sReset {
  position: absolute;
  right: 50px;
  top: 11px;
  width: 20px;
  height: 20px;
}

.com-sTxt {
  flex: 3;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 8px 20px 0 10px;
  font-size: 15px;
  left: 20rpx;
}

.com-sList {
  background: white;
  width: inherit;
  position: absolute;
  border: 1px solid #e2e2e2;
  border-top: none;
  box-sizing: border-box;
  z-index: 999;
  max-height: 500px;
  overflow: auto;


}

.com-sItem {
  height: 45px;
  line-height: 30px;
  border-top: 1px solid #e2e2e2;

  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 16px;

    display: flex;
}

.com-sItem:first-child {
  border-top: none;
}
