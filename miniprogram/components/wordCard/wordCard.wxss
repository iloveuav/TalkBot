/* components/classCard.wxss */
@import "../../style/iconfont.wxss";

.swiper {
  margin: 0 30rpx;
  width: 100%;
  height: 800rpx;
}

.Card {
  height: 725rpx;
  width: 510rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
  box-shadow: 0 3rpx 20rpx 1rpx rgba(0, 0, 0, 0.07);
  background-color: rgb(255, 255, 255);
}

.img {
  width: 100%;
  height: 510rpx;
  border-radius: 15rpx 15rpx 0 0;
}

.card_text{
  padding: 30rpx 25rpx 40rpx;
}
.Title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
}

.card_content{
  font-size: 24rpx;
  color: #A2A2A2;
  margin-top: 45rpx;
  margin: 45rpx 10rpx 10rpx 10rpx;
  padding: 10rpx;
  overflow-y: auto;
  text-overflow: ellipsis;
  max-height: 100rpx;
  height: 75rpx;
  
}

.content_text_style{
  height: 400rpx;
  margin-top: 20rpx;
  padding: 10rpx;
  /* border: 1rpx solid red; */
}


@keyframes closeDown {
  form {
    transform: translateY(0%);
  }

  to {
    height: 0;
    transform: translateY(110%);
  }
}
.toClass {
  margin-top: 40rpx;
  background-color: white;
  border-radius: 100rpx;
}

.zoom-in{
  transform: scale(1.1);
  transition: all .2s linear;
}
.zoom-out{
  transform: scale(1);
  transition: all .2s linear;
}

