/* components/classCard.wxss */
@import "../../style/iconfont.wxss";

.swiper {
  margin: 0 30rpx;
  width: 100%;
  height: 800rpx;
}

.Card {
  height: 700rpx;
  width: 510rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
  box-shadow: 0 3rpx 20rpx 1rpx rgba(0, 0, 0, 0.07);
}

.img {
  width: 100%;
  height: 510rpx;
  border-radius: 15rpx 15rpx 0 0;
}

.card_text{
  padding: 30rpx 25rpx 40rpx;
}
.Title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
}

.card_content{
  font-size: 30rpx;
  font-size: 500;
  color: #A2A2A2;
  margin-top: 20rpx;
}


@keyframes closeDown {
  form {
    transform: translateY(0%);
  }

  to {
    height: 0;
    transform: translateY(110%);
  }
}
.toClass {
  margin-top: 40rpx;
  background-color: white;
  border-radius: 100rpx;
}

.zoom-in{
  transform: scale(1.1);
  transition: all .2s linear;
}
.zoom-out{
  transform: scale(1);
  transition: all .2s linear;
}