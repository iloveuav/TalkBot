<!--components/classCard.wxml-->
<swiper class="swiper" bindchange="swiperBindchange" previous-margin="100rpx"
        next-margin="100rpx"
        :indicator-dots="false"
        :autoplay="false">
  <block wx:for="{{allItem}}" wx:key="index" wx:for-index="index">
    <swiper-item catchtap="preimage" data-i="{{index}}">
      <view class="Card {{currentSwiperIndex == index ? 'zoom-in' : 'zoom-out'}}">
        <image class="img" src="{{item.src}}" mode="aspectFill"></image>
        <view class="card_text">
          <view class="Title"> {{item.textimgTitle}} </view>
          <view class="card_content slide-image {{currentSwiperIndex == index ? 'zoom-in' : 'zoom-out'}}"> {{item.content}} </view>
        </view>
      </view>
    </swiper-item>
  </block>
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/loading_blue.gif"></image>
  </view>
</swiper>



