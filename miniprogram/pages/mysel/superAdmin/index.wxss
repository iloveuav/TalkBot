/* page/four/index.wxss */

page,
.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: #fff !important;
}

.page-bottom {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background-color: rgb(246, 246, 250);
  z-index: 0;
}

.wc {
  color: black;
  padding: 30rpx 0 30rpx 40rpx;
  font-size: 28rpx;
}

.page-content {
  padding-top: 300rpx;
}

.page-top {
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: rgb(246, 246, 250);
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}


.page-content .title {
  position: absolute;
  width: 248rpx;
  height: 68rpx;
  font-size: 26rpx;
  left: 20rpx;
  top: 200rpx;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
  transform: rotate(0deg) scale(.8) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(.8) translate(75%, 0%);
}

.tap {
  width: 56%;
  margin-left: 10rpx;
  margin-top: 50rpx;
}

.callboard {
  margin-top: 200rpx;
  border: 1rpx solid black;
  height: 10%;
  position: relative;
}

.callboard image {
  position: absolute;
  bottom: 10rpx;

}

.cardBtn {
  position: relative;
  /* border: 1px solid red; */
  /* height: 50rpx; */
}

.addFrom {
  position: absolute;
  right: 30rpx;
  bottom: 5rpx;
  width: 50rpx;
  height: 50rpx;
}

/* edit Nda */

.adminBox {

  width: 56%;
  margin-left: 10rpx;
  margin-top: 100rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  background-color: white;
  line-height: 40px;
  font-size: 26rpx;
  border: 1px solid #d0d0d0;
  border-radius: 40rpx;
  padding-left: 10px;
  padding-right: 50rpx;
  box-sizing: border-box;
  padding: 20rpx;
  box-shadow: 0 0 8rpx #ccc;
}

.sendbButton {
  flex: 1;
  right: 10rpx;
  background: grey;
  color: #000;
  line-height: 40px;
  font-size: 14px;
  background: transparent;
}

.adminBox button::after {
  border: none;
}

.itemBox {
  flex: 1;
  align-items: center;
  /** 垂直居中*/
  display: flex;
  justify-content: center;
  /** flex 属性， 水平居中**/
  flex-wrap: wrap;
  padding: 5rpx;
  /* border: 1px solid black; */
  flex-direction: column;
}

.adminText {
  margin-left: 3rpx;
  /* border: 1px solid black; */
}

.editNda {
  margin: 0 auto;
  width: 60rpx;
  height: 60rpx;
  /* border: 1px solid black; */
}

.adminSetting {

  width: 60rpx;
  height: 60rpx;
  /* border: 1px solid black; */
}

.hei {
  margin-top: 0px;
  height: 1rpx;
}

.unRead {
  position: relative;
}

.unRead text {
  position: absolute;
  left: 160rpx;
  top: -26rpx;
  height: 32rpx;
  min-width: 32rpx;
  line-height: 32rpx;
  padding: 3rpx 5rpx 4rpx;
  font-size: 24rpx;
  font-family: tahoma;
  border-radius: 32rpx;
  background: #f44;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  z-index: 10;
  box-sizing: content-box;
}

.adminBg {
  height: 200rpx;
}

.loading {
  border: 1px solid black;
  position: relative;
  left: 20rpx;
}

.loading image {
  position: fixed;
  bottom: 45%;
  left: 36%;
  width: 200rpx;
  height: 200rpx;
}

