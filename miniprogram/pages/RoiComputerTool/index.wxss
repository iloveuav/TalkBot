page {
  min-height: 100vh;
  background-color: #4D9BF4;
}

.courseInfo {
  width: 100%;
  padding: 30rpx 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: white;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
}

.tips {
  margin-top: 15rpx;
  text-align: center;
  font-size: 28rpx;
}
.item_top_title {
  margin-top: 15rpx;
  margin-left: 15rpx;
  text-align: left;
  font-size: 28rpx;
}

.form_item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  margin: 15rpx 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #A2A2A2;
  background-color: #fff;
}

.form_item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.form_item .input {
  height: 100%;
  flex: 1;
}

.addImgBtn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.introduce {
  flex-direction: column;
  align-items: start;
  height: auto;
  padding: 30rpx;
}

.introduce .chapter {
  padding: 15rpx 28rpx;
  border-radius: 34rpx;
  color: #4D9BF4;
  background: rgba(77, 155, 244, .2);
}

.introduce .input {
  margin-top: 30rpx;
  height: 300rpx;
  width: 100%;
  flex: auto;
}

.tagInfo {
  padding-top: 0;
}

.tagInfo .tagList {
  margin: 30rpx 0 0;
  display: flex;
  flex-wrap: wrap;
}

.tagList text {
  min-width: 120rpx;
  /* max-width: 200rpx; */
  padding: 0rpx 10rpx 0rpx 10rpx;
  height: 48rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  border: 1rpx solid #fff;
  border-radius: 180rpx;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}

.tagList text:nth-child(4n) {
  margin-right: 0;
}

.tagList .active{
  color: #4D9BF4;
  background: white;
}

.sendMessage {
  width: 100%;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
}

.sendMessage .sendMessButton {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 180rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #4D9BF4;
  background-color: white;
}