<view class='courseInfo'>
  <view class="title">{{pageTitle}}</view>
  <view class='tips'>{{pageRowText}}</view>
  <!-- <view class="unRead" wx:if="{{unReadNum}}">
    <text>{{unReadNum}}</text>
  </view> -->

  <view class='item_top_title'>成本价</view>
  <view class="form_item">
    <image class="icon" src="/images/icon/title.png"></image>
    <input type="digit" class="input" bindinput="bindChange2" confirm-type="done" value='{{editCourseDetail.courseName||className}}' placeholder="{{firstPlaceholder}}" />
  </view>
  <view class='item_top_title'>零售价</view>
  <view class="form_item">
    <image class="icon" src="/images/icon/coverImg.png"></image>
    <input type="number" class="input" type="number" bindinput="bindChange1" confirm-type="done" value='{{editCourseDetail.courseFrontImgUrl}}' placeholder="{{secondPlaceholder}}" />
    <!-- <image src="/images/button/upload2.png" class="addImgBtn" bindtap='uploadimg'></image> -->
  </view>
  <view class='item_top_title'>订单数量</view>
  <view class="form_item">
    <image class="icon" src="/images/icon/title.png"></image>
    <input class="input" bindinput="bindChange2" confirm-type="done" value='{{editCourseDetail.courseName||className}}' placeholder="{{thirdPlaceholder}}" />
  </view>
  <view class='item_top_title'>推广消耗</view>
  <view class="form_item">
    <image class="icon" src="/images/icon/title.png"></image>
    <input class="input" bindinput="bindChange2" confirm-type="done" value='{{editCourseDetail.courseName||className}}' placeholder="{{forthPlaceholder}}" />
  </view>

  <view class="form_item introduce">
    <text class="chapter">计算结果</text>
    <textarea maxlength="-1" user-select class="input" bindinput="bindChange3" confirm-type="done" value='{{editCourseDetail.courseIntroduce||courseIntroduce}}' placeholder="{{thirdPlaceholder}}" />
</view>
</view>


