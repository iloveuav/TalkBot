<!-- -----------------英语课程卡片组件------------------------------------------ -->
<view class="classCard">

  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/loading_blue.gif"></image>
  </view>

  <scroll-view>

    <view wx:for="{{allCourse[0].children}}">
      <view wx:if="{{item.isMineCourse||pageType ==='studyPage'}}">
        <courseCard crouseDetail="{{item}}" currentIndex="{{currentIndex}}" pageName="index"
          bindchangeCourse="getcurrentCourse">
        </courseCard>
      </view>
    </view>
  </scroll-view>
  <!-- <view class="crouseType">英语课程</view> -->
</view>
