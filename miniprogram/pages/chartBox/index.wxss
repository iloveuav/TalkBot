page {
  min-height: 100vh;
  background-color: #4D9BF4;
}

.courseInfo {
  width: 100%;
  padding: 30rpx 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: white;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
}

.tips {
  margin-top: 15rpx;
  text-align: center;
  font-size: 28rpx;
}

.form_item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  margin: 15rpx 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #A2A2A2;
  background-color: #fff;
}

.form_item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.form_item .input {
  height: 100%;
  flex: 1;
}

.addImgBtn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.introduce {
  flex-direction: column;
  align-items: start;
  height: auto;
  padding: 30rpx;
}

.introduce .chapter {
  padding: 15rpx 28rpx;
  border-radius: 34rpx;
  color: #4D9BF4;
  background: rgba(77, 155, 244, .2);
}

.introduce .input {
  margin-top: 30rpx;
  height: 300rpx;
  width: 100%;
  flex: auto;
}

.tagInfo {
  padding-top: 0;
}

.tagInfo .tagList {
  margin: 30rpx 0 0;
  display: flex;
  flex-wrap: wrap;
}

.tagList text {
  width: 140rpx;
  height: 48rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  border: 1rpx solid #fff;
  border-radius: 180rpx;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}

.tagList text:nth-child(4n) {
  margin-right: 0;
}

.tagList .active {
  color: #4D9BF4;
  background: white;
}

.sendMessage {
  width: 100%;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
}

.sendMessage .sendMessButton {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 180rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #4D9BF4;
  background-color: white;
}


/* //发音人 选择模态框 */

.setwaitData {
  background-color: #FFFFFF;
  width: 85%;
  height: 550rpx;
  padding: 20rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 80%;
  margin-top: 0rpx;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  justify-content: space-around;
  font-size: 20rpx;
  z-index: 99;
  margin: 0 auto;
}

.modelTitle {
  font-size: 30rpx;
  color: #000;
  font-weight: 800;
  position: absoluted;
  z-index: 999;
  text-align: center;
  margin-top: 20rpx;
  /* border: 1px solid red; */
}

.cancel {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 30rpx;
  right: 50rpx;
  z-index: 99999;
}

.voice_category_swiper {
  margin: 0rpx;
  height: 150rpx;
  width: 320rpx;
  margin-left: 40%;
  border-radius: 20rpx;
  overflow: hidden;
  border: 1rpx solid rgb(81, 175, 230);
  margin-top: 20rpx;
  padding: 20rpx;
  /* border-bottom: 1rpx solid rgb(131, 120, 120); */

}

.voice_role_swiper {
  margin: 0rpx;
  height: 320rpx;
  width: 620rpx;
  /* margin-left: 1%; */
  border-radius: 20rpx;
  overflow: hidden;
  /* border-right: 1rpx solid rgb(131, 120, 120); */

  /* border: 1rpx solid red; */
}

