.right {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: 30rpx 10rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 800;
  padding: 5rpx 10rpx;
  margin-top: 10rpx;
  flex-wrap: nowrap;
  width: 100%;
  text-emphasis: '...';
}

.detail {
  font-size: 25rpx;
  font-weight: 400;
  padding: 5rpx 10rpx;
}

.process {
  padding: 0rpx 10rpx;
}

.process-data {
  font-size: 25rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.top-card-weeksign {
  margin-top: 60rpx;
  font-size: 26rpx;

  /* display: flex;
  justify-content: center;
  align-items: center; */
}

.top-card-weeksign-progress {
  width: 100px;
  margin-top: 10rpx;

  display: flex;
  border: 1rpx solid rgb(204, 198, 198);
  border-radius: 100rpx;
  height: 15rpx;
  background-color: #fff;
}

.top-card-weeksign-progress-item {
  border-radius: 100rpx;
  position: absolute;
  height: 15rpx;
}

.mineCourseBtns {
  display: flex;
  flex-wrap: nowrap;
  margin-left: 20rpx;
}

.preview-btn {
  background: #0088fb;
  color: #fff;
  border-radius: 5rpx;
  font-size: 20rpx;
  width: 100rpx;
  height: 50rpx;
  margin-top: 30px;
}

.edit-btn {
  background: #cf9655;
  color: #fff;
  border-radius: 5rpx;
  font-size: 20rpx;
  width: 100rpx;
  height: 50rpx;
  margin-top: 30px;
}


.addChapter-btn {
  background: #cf9655;
  color: #fff;
  border-radius: 5rpx;
  font-size: 20rpx;
  width: 300rpx;
  height: 50rpx;
  margin-top: 30px;
}

.bottomCard {
  height: 320rpx;
  display: flex;
  width: 96%;
  margin: 10rpx 2%;
  box-shadow: 0 0 8rpx #ccc;
  border: 1px solid #d0d0d0;
  border-radius: 20rpx;
  background-color: white;
}