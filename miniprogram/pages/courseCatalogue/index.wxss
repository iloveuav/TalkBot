.course_catalogue{

}

.basic_info{
  display: flex;
  box-sizing: border-box;
  width: 100%;
  padding: 50rpx 30rpx 80rpx;
  background-color: #449df2;
  color: white;
}

.info_cover{
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  background-color: pink;
}

.info_content{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.content_title{
  margin-bottom: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.content_desc{
  font-size: 24rpx;
  font-weight: 500;
}

.content_state{
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.chapter{
  box-sizing: border-box;
  margin-top: -50rpx;
  padding: 40rpx 30rpx 0;
  border-radius: 50rpx 50rpx 0 0;
  background-color: #fff;
}

.chapter_header{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header_info{
  display: flex;
  align-items: center;
}

.header_info text{
  color: #666666;
  font-size: 26rpx;
  font-weight: 500;
}

.addChapter_btn{
  margin: 0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: white;
  background-color: #fe0056;
}

.chapter_list{
width: 90%;
}

.chapter_item {
  position: relative;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.order{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
  color: #666666;
}

.fail{
  position: absolute;
  left: 340px;
}

.course_operate{
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 88rpx;
}

.course_operate button {
  flex: 1;
  height: 72rpx;
  border-radius: 0 180rpx 180rpx 0;
  line-height: 72rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  background-color: #fe0056;
}

.course_operate button:first-child{
  border-radius: 180rpx 0 0 180rpx;
  background-color: #ff7100;
}