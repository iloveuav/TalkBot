.Card {
  height: 320rpx;
  display: flex;
  width: 96%;
  margin: 10rpx 2%;
  box-shadow: 0 0 8rpx #ccc;
  border: 1px solid #d0d0d0;
  border-radius: 20rpx;
  background-color: white;
}

.left {
  display: flex;
  flex: 1.2;
  padding: 30rpx 15rpx;
}

.left image {
  width: 98%;
  height: 90%;
  padding: 10rpx;

  box-shadow: 0 0 8rpx #ccc;
  /* border: 1px solid #d0d0d0; */
  border-radius: 20rpx;
  background-color: white;
}

